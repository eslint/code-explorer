{
  "name": "eslint-code-explorer",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "The codebase for the ESLint Explorer (explorer.eslint.org)",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "npm run build:website:watch",
    "build:website": "vite build",
    "build:website:watch": "vite",
    "lint": "npm-run-all --parallel lint:js lint:md lint:scss",
    "lint:fix": "npm-run-all --parallel lint:fix:*",
    "lint:js": "eslint .",
    "lint:fix:js": "eslint . --fix",
    "lint:md": "markdownlint \"**/*.md\" ",
    "lint:fix:md": "markdownlint --fix  \"**/*.md\"",
    "lint:scss": "stylelint \"**/*.scss\"",
    "lint:fix:scss": "stylelint \"**/*.scss\" --fix"
  },
  "devDependencies": {
    "@eslint/compat": "^1.0.3",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.23",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint-config-eslint": "^11.0.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "globals": "^15.0.0",
    "markdownlint-cli": "^0.39.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.72.0",
    "stylelint": "^14.13.0",
    "stylelint-config-standard-scss": "^5.0.0",
    "vite": "^5.2.7",
    "vite-plugin-eslint4b": "^0.4.2"
  },
  "dependencies": {
    "@codemirror/lang-javascript": "0.19.7",
    "@codemirror/view": "0.19.47",
    "@hpcc-js/wasm": "^2.16.1",
    "@uiw/react-codemirror": "4.5.1",
    "eslint": "^9.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
